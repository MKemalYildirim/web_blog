    <!-- Contact-->
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {


        <section class="page-section" id="contact">

            <div class="container">

                <div class="text-center">
                    <h2 class="section-heading text-uppercase">BİZE ULAŞIN</h2>

                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form id="contactForm" name="sentMessage" novalidate="novalidate">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.name_surname, new { @class = "form-control yazi", placeholder = "Adınız Soyadınız *zorunlu" })
                                @Html.ValidationMessageFor(model => model.name_surname, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control yazi", placeholder = "E-mail *zorunlu" })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.number, new { @class = "form-control yazi", placeholder = "Telefon Numarası" })
                                @Html.ValidationMessageFor(model => model.number, "", new { @class = "text-danger" })
                            </div>



                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-group-textarea mb-md-0">
                                @Html.TextAreaFor(model => model.massage, new { @class = "form-control", placeholder = "Mesajınız *zorunlu" })
                                @Html.ValidationMessageFor(model => model.massage, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    @if (TempData["Basarili"] != null)
                    {
                        <!-- Success message -->
                        <div class="alert alert-success" role="alert" id="success_message">
                            <i class="glyphicon glyphicon-thumbs-up"></i>@TempData["Basarili"]
                        </div>
                    }
                    <!-- Button -->
                    <div class="form-group">
                        <label class="col-md-4 control-label"></label>
                        <div class="btn-alt">
                            <button type="submit" class="btn btn-xl btn-warning">Gönder <span class="glyphicon glyphicon-send"></span></button>
                        </div>
                    </div>








                    }
                </form>
            </div>
        </section>
    }

